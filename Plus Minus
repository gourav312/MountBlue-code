void plusMinus(vector<int> arr) {
    float pos=0;
    float neg = 0;
    float zero= 0;
    float n = arr.size();
    for(int i=0;i<arr.size();i++){
        if(arr[i]>0){
            pos++;
        }else if(arr[i]<0){
            neg++;
        }else{
            zero++;
        }
    }
    float a= pos/n;
    cout<<a<<endl;
    cout<<float(neg/n)<<endl;
    cout<<float(zero/n)<<endl;
}
